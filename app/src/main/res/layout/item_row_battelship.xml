<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Dimension"
    android:orientation="horizontal"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        tools:src="@android:color/darker_gray" />
    <LinearLayout
        style="@style/Dimension"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/img_item_picture"
        android:layout_toRightOf="@id/img_item_picture"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_name"
            style="@style/Dimension"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/battleshipName" />
        <TextView
            android:id="@+id/tv_item_detail"
            style="@style/Dimension"
            android:fontFamily="@font/carrois_gothic"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="@string/battleshipDetail" />
    </LinearLayout>
</RelativeLayout>