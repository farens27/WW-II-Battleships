<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/battleship_detail_name"
        style="@style/Dimension"
        android:layout_marginTop="12dp"
        android:text="@string/name_battleship"
        android:textAlignment="center"
        android:fontFamily="@font/pragati_narrow"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/battleship_detail_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/image_battleship"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battleship_detail_name" />

    <TextView
        android:id="@+id/battleship_detail_description"
        style="@style/Dimension"
        android:layout_margin="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/carrois_gothic"
        android:padding="8dp"
        android:text="@string/description_battleship"
        android:textAlignment="gravity"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battleship_detail_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>